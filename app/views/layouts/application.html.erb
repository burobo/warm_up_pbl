<!DOCTYPE html>
<html>
  <head>
    <%= favicon_link_tag('favicon.ico') %>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= display_meta_tags(default_meta_tags) %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <% if Rails.env.production? %>
      <%= render 'layouts/google_analytics' %>
    <% end %>
  </head>

  <body class="d-flex flex-column vh-100">
    <div id="fb-root"></div>
    <script async defer crossorigin="anonymous" src="https://connect.facebook.net/ja_JP/sdk.js#xfbml=1&version=v14.0&appId=522684069319655&autoLogAppEvents=1" nonce="Kie28uVE"></script>
    <!-- <div id="js-hello-vue"></div> -->
    <header class="sticky-top py-3 bg-dark">
      <div class="container">
        <div class="d-flex justify-content-between align-items-center">
          <%= link_to image_tag("buds.png", size: "32x32", class: "navbar-brand"), root_path %>
          <ul class="d-flex align-items-center pt-3 list-unstyled">
            <% if user_signed_in? %>
              <li>
                <%= link_to notifications_path, class: "notification-bell" do %>
                  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-bell" viewBox="0 0 16 16">
                    <path d="M8 16a2 2 0 0 0 2-2H6a2 2 0 0 0 2 2zM8 1.918l-.797.161A4.002 4.002 0 0 0 4 6c0 .628-.134 2.197-.459 3.742-.16.767-.376 1.566-.663 2.258h10.244c-.287-.692-.502-1.49-.663-2.258C12.134 8.197 12 6.628 12 6a4.002 4.002 0 0 0-3.203-3.92L8 1.917zM14.22 12c.223.447.481.801.78 1H1c.299-.199.557-.553.78-1C2.68 10.2 3 6.88 3 6c0-2.42 1.72-4.44 4.005-4.901a1 1 0 1 1 1.99 0A5.002 5.002 0 0 1 13 6c0 .88.32 4.2 1.22 6z"/>
                  </svg>
                <% end %>
              </li>
              <li>
                <ul class="navbar-nav">
                  <li class="nav-item dropdown">
                    <span class="link-light py-3 px-4 dropdown-toggle" id="navbarDarkDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                      <%= current_user.name %>
                    </span>
                    <ul class="dropdown-menu" aria-labelledby="navbarDarkDropdownMenuLink">
                      <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "dropdown-item" %></li>
                    </ul>
                  </li>
                </ul>
              </li>
              <li>
                <%= link_to "アイデア登録", ideas_register_path, method: :get, class: "link-light py-3 px-4 border rounded text-decoration-none" %>
              </li>
            <% else %>
              <li class="me-2">
                <%= link_to "サインイン", new_user_session_path, class: "link-light py-3 px-4 border rounded text-decoration-none" %>
              </li>
              <li>
                <%= link_to "サインアップ", new_user_registration_path, class: "link-light py-3 px-4 border rounded text-decoration-none" %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </header>
    <%= yield %>
    <% if notice %>
    <div id="notice-modal" class="modal fade" tabindex="-1" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-body">
            <%= notice %>
          </div>
        </div>
      </div>
    </div>
    <% end %>
    <footer class="footer mt-auto py-3 bg-dark">
      <div class="container">
        <ul class="d-flex align-items-center pt-3 list-unstyled">
          <li>
            <%= link_to "アイデアファームとは", :about, class: "link-light py-3 px-4 text-decoration-underline-hover" %>
          </li>
          <li>
            <%= link_to "利用規約", "#", class: "link-light py-3 px-4 text-decoration-underline-hover" %>
          </li>
        </ul>
      </div>
    </footer>
  </body>
</html>
