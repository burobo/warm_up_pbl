<div class="d-flex justify-content-center mt-5">
  <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field mb-4">
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true, class: "form-control", style: "width: 320px;" %>
    </div>

    <div class="field mb-4">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", style: "width: 320px;" %>
    </div>

    <div class="field mb-4">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control", style: "width: 320px;" %>
    </div>

    <div class="field mb-5">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", style: "width: 320px;" %>
    </div>

    <div class="actions text-center">
      <%= f.submit "ç™»éŒ²", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>

